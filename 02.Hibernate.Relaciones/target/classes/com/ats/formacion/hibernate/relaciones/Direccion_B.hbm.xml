<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ats.formacion.hibernate.relaciones">

	<class name="Direccion_B" table="bi_rel_direcciones">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="modelo" />
		<set name="personas" cascade="save-update"
			table="bidir_personasDirecciones" inverse="true">
			<key column="iddir" />
			<many-to-many class="Persona" column="idpersona" />
		</set>	
	</class>	

</hibernate-mapping>